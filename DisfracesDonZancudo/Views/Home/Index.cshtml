
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="card bg-light card-body">
                        <div class="row">
                            <div class="col" style="text-align:left; margin-top: 50px;">
                                <button type="button" class="btn btn-primary" id="btnModalAdicionar"><span class="fas fa-plus-circle" aria-hidden="true"></span> Adicionar</button>
                            </div>
                        </div>
                    </div>

                    <div id="dTable" class="table-responsive">
                        <table id="dtListado" class="dataTable display hover stripe" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th style="width:30px;text-align:center">Nombre del Cliente</th>
                                    <th style="width:60px;text-align:center">Disfraz</th>
                                    <th style="width:60px;text-align:center">Tipo Pago</th>
                                    <th style="width:60px;text-align:center">Tipo Disfraz</th>
                                    <th style="width:60px;text-align:center">Fecha de Arriendo</th>
                                    <th style="width:60px;text-align:center">Fecha de Finalizacion</th>
                                </tr>
                            </thead>
                            <tfoot>

                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Adicionar -->
<div class="modal fade" id="mAdicionar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel"><span class="fas fa-pencil-alt" aria-hidden="true"></span> Adicionar</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>

            <div class="modal-body">

                <h2>Informacion del Cliente</h2>

                <div class="form-group">
                    <label class="lbl-bold" for="iNombre">RUT CLiente</label>
                    <input type="text" class="form-control" id="rut" placeholder="Ejemplo: 99999999-X" maxlength="12">
                </div>

                <div class="form-group">
                    <label class="lbl-bold" for="iNombre">Nombres</label>
                    <input type="text" class="form-control col" id="nombres" maxlength="25" required>
                </div>

                <div class="form-group">
                    <label class="lbl-bold" for="iNombre">Apellidos</label>
                    <input type="text" class="form-control col" id="apellidos" maxlength="25" required>
                </div>

                <div class="form-group">
                    <label class="lbl-bold col-4" for="iNombre" style="padding-left: 0px;">Telefono</label>
                    <input type="number" class="form-control" id="telefono" maxlength="9" required>
                </div>

                <div class="form-inline">
                    <label class="lbl-bold">Disfraz:&nbsp;</label>
                    <div class="form-inline col">
                        <select class="form-control" id="selectedDisfraz">
                            <option value="0">---</option>
                        </select>
                    </div>
                </div>

                <hr />

                <h2>Servicio</h2>

                <div class="form-group">
                    <label class="lbl-bold" for="exampleInputEmail1">Fecha de Arriendo:&nbsp;</label>
                    <input type="text" class="form-control col-5" id="fechaArriendo" name="fechaArriendo" value="@DateTime.Now.ToString("dd-MM-yyyy")" />
                </div>

                <div class="form-group">
                    <label class="lbl-bold col-4" style="padding-left: 0px;">Dias de Arrendo</label>
                    <input type="number" class="form-control" id="diasArriendo" maxlength="2" required>
                </div>

                <div class="form-group">
                    <label class="lbl-bold" for="exampleInputEmail1">Tipo de Pago:&nbsp;</label>
                    <div class="form-inline col">
                        <select class="form-control" id="selectedTipoPago">
                            <option value="0">---</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="lbl-bold">Observacion</label>
                    <input type="text" class="form-control col" id="observacion" maxlength="100" required>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-dark-success" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnAdicionar">Guardar</button>
            </div>

        </div>
    </div>
</div>

<input type="hidden" value="" name="identificador" />

@section Scripts {

    <script src="~/ScriptsJS/reporte.js"></script>

    <link href="~/Scripts/DataTable/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/DataTable/jquery.dataTables.min.js"></script>

    <script src="~/Scripts/Rangepicker/moment.js"></script>
    <link href="~/Scripts/Rangepicker/daterangepicker.css" rel="stylesheet" />
    <script src="~/Scripts/Rangepicker/daterangepicker.js"></script>

    <script src="~/Scripts/Utilidades.js"></script>

    <script language="javascript" type="text/javascript">

        var dtListado;

        $(document).ready(function () {

            var start = moment().subtract(365, 'days');
            var end = moment();

            $('input[name="fechaArriendo"]').daterangepicker({
                singleDatePicker: true,
                showDropdowns: true,
                minYear: @DateTime.Now.Year,
                maxYear: parseInt(moment().format('YYYY'), 10),
                locale: { format: 'DD/MM/YYYY' }
            });

            dtListado = $("#dtListado").dataTable({
                "bLengthChange": false,
                "iDisplayLength": 20,
                "bAutoWidth": false,
                "language": {
                    "info": "_PAGE_ de _PAGES_",
                    "sSearch": "Filtrar:"
                }, "columnDefs": [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    }
                ]
            });

            GetListado();
            GetListadoDisfraz();
            GetListadoTipoPago();
        });

    </script>

}